@model List<ArticleDto>
@{
	ViewData["Title"] = "Index";
}

<div class="content-wrapper">
	<!-- Content -->

	<div class="container-xxl flex-grow-1 container-p-y">
		<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Makale Yönetimi /</span> Makaleler</h4>

		<!-- Basic Bootstrap Table -->
		<div class="card p-5">

			<div class="table-responsive text-nowrap">

				<a class="btn btn-success mb-4" asp-area="Admin" asp-controller="Article" asp-action="Add">Makale Ekle <i class="bx bx-plus"></i></a>

				<table class="table table-bordered" id="articlesTable" width="100%" collapcing="0">
					<thead>
						<tr>
							<th>Başlık</th>
							<th>Kategori</th>
							<th>Oluşturulan Tarih</th>
							<th>Oluşturulan</th>
							<th>Durum</th>
							<th>İşlemler</th>
						</tr>
					</thead>
					
					<tbody class="table-border-bottom-0">
						@foreach (var article in Model)
						{
							<tr name="@article.Id">
								<td>@article.Title</td>
								<td>@article.Category.Name</td>
								<td>@article.CreatedDate.ToShortDateString()</td>
								<td>@article.CreatedBy</td>
								<td>@(article.isDeleted ? "Aktif Değil" : "Aktif")</td>
								<td>
									<a class="btn btn-primary btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Update" asp-route-articleId="@article.Id"><i class="bx bxs-edit"></i>Edit</a>
									<a class="btn btn-danger btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-articleId="@article.Id"><i class="bx bx-minus-circle"></i>Sil</a>
								</td>

							</tr>
						}
					</tbody>

					<tfoot>
						<tr>
							<th>Başlık</th>
							<th>Kategori</th>
							<th>Oluşturulan Tarih</th>
							<th>Oluşturulan</th>
							<th>Durum</th>
							<th>İşlemler</th>
						</tr>
					</tfoot>
				</table>

			</div>
		</div>




	</div>
</div>
@section Scripts{
	<script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}




